---
import BaseHead from "../../../components/BaseHead.astro";
import { getEntry } from "astro:content";
import { getAlternates, getThumbnailUrl } from "../../../utils/blog";
import PageLayout from "../../../layouts/PageLayout.astro";
import Content from "./_content.md";

const lang = "en";
const post = await getEntry("blog", "web-frontend-performance");
if (!post) throw new Error("Entry not found blog:web-frontend-performance");
const image = getThumbnailUrl(post);
const alternates = getAlternates(post, lang);
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead
      title={post.data.title}
      description={post.data.description}
      image={image}
      alternates={alternates}
    />
    <style>
      article {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1em;
      }

      article > :global(*) {
        width: min(840px, calc(100% - 2em));
      }

      article > :global(hr) {
        width: calc(0.6 * min(840px, calc(100% - 2em)));
        margin-block: 1.5em;
        border-color: var(--border-color);
      }

      article > :global(figure) {
        width: initial;
        max-width: calc(100% - 2em);
        overflow-x: auto;
        border: solid 1px var(--border-color);
        margin-block: 1em;
        display: flex;
        flex-direction: column;
        /*align-items: center;*/

        & :global(*) {
          margin-inline: auto;
        }
        & :global(figcaption) {
          padding: 1em;
          max-width: 840px;
        }
      }

      article > :global(h1) {
        margin-top: 2rem;
      }

      article > :global(h2, h3, h4, h5, h6) {
        margin-top: 1rem;
      }

      article :global(blockquote) {
        border: solid 1px var(--border-color);
        box-sizing: border-box;
        margin: 0;
        margin-bottom: 1em;
        padding: 1em;
        padding-left: 1.5em;
        border-left-width: 4px;

        & > :global(p):last-child {
          margin-bottom: 0;
        }
      }

      #table-of-content-floating-link {
        position: fixed;
        top: 0;
        right: 0;
        padding: 0.5em 1em;
        display: block;
        background: var(--bg-color);
        border-bottom-left-radius: 0.5em;
        border-bottom: solid 1px var(--border-color);
        border-left: solid 1px var(--border-color);
        z-index: 1;
      }
    </style>
  </head>

  <PageLayout lang={lang} alternates={alternates}>
    <a id="table-of-content-floating-link" href="#table-of-content">
      Table of content
    </a>
    <article>
      <Content />
    </article>
  </PageLayout>
</html>
